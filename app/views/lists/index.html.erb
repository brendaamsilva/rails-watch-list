<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.istockphoto.com/id/1340577488/pt/foto/girl-enjoying-watching-a-nice-movie-at-the-cinema.jpg?s=612x612&w=0&k=20&c=-uLfR20hKAN39Peags5gVULp0iRKoSms-Md5CinEeBY=);">
  <div class="container">
    <h1>Movie Lists</strong>!</h1>
    <p>Organize your all time classics!</p>
  <%= link_to "Create List", new_list_path, class: "btn btn-primary btn-sm mt-3" %>
  </div>
</div>

<h1>Lists:</h1>
<div class="row">
<% @lists.each do |list| %>
    <div class="col-sm">
      <div class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path (list.photo.key), height: 300, crop: :fill %>')"
      <p><%= link_to list.name, list_path(list) %></p>
      </div>
    </div>
  <% end %>
</div>
<br>
